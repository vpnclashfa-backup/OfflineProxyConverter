{
  "name": "subconverter-desktop",
  "version": "1.0.0",
  "description": "A local desktop application for Subconverter",
  "main": "build/main.js",
  "private": true,
  "homepage": ".",
  "scripts": {
    "start": "electron .",
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "build": "npm run react-build && node scripts/copy-electron-main.js && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3",
    "tailwindcss": "^3.4.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.yourcompany.subconverterdesktop",
    "productName": "Subconverter Desktop",
    "win": {
      "target": "zip",
      "icon": "icon.png"
    },
    "files": [
      "build/**/*",
      "build/main.js",
      "build/preload.js",
      "node_modules/**/*"
    ],
    "extraFiles": [
      {
        "from": "subconverter.exe",
        "to": "./subconverter.exe"
      }
    ],
    "extraMetadata": {
      "main": "build/main.js"
    }
  }
}
